<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zimny.socialfood">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.AdminActivity" />
        <activity android:name=".activity.details.FoodDetailsActivity" />
        <activity android:name=".activity.FlatMainActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.details.OrderDetailsActivity" />
        <activity android:name=".activity.details.UserDetailsActivity" />
        <activity android:name=".activity.details.RestaurantDetailsActivity" />
        <activity android:name=".activity.details.GroupDetailsActivity"></activity>
    </application>

</manifest>